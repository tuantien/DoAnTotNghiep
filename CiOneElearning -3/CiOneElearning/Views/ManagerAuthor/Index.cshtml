@model IEnumerable<CiOneElearning.Models.TacGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayOut/_HomeLayout.cshtml";
}

<h2>Quản Lý Tác Giả</h2>

<p>
    <a href="@Url.Action("Create", "ManagerAuthor")">
        <button type="button" class="btn btn-primary">Tạo Mới </button>
    </a>
 
</p>
<table class="table">
    <tr>
        <th>
            Tên Tác Giả
        </th>
        <th>
           Chức Vị
        </th>
        <th width="200">
            Giới Thiệu
        </th>
        <th>
            Ảnh
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTacGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChucVi)
        </td>
        <td>
            @Html.Raw(item.GioiThieuTG)
        </td>
        <td>
            <img src="@item.AnhTG" width="40" />
        </td>
        <td>
            <a href="@Url.Action("Edit", "ManagerAuthor", new { id = item.ID_TacGia })">
                <i class="material-icons md-dark pmd-sm">mode_edit</i>
            </a>
            <a href="@Url.Action("Details", "ManagerAuthor", new { id = item.ID_TacGia })">
                <i class="material-icons md-dark pmd-sm">info_outline</i>
            </a>
            <a href="@Url.Action("Delete", "ManagerAuthor", new { id = item.ID_TacGia })">
                <i class="material-icons md-dark pmd-sm delete">delete</i>
            </a>
        </td>
    </tr>
}

</table>
