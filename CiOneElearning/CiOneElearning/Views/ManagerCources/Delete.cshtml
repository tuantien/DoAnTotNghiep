@model CiOneElearning.Models.KhoaHoc

@{
    ViewBag.Title = "Xóa Khóa Học";
    Layout = "~/Views/LayOut/_HomeLayout.cshtml";
}

<div class="row">

    <div class="col-sm-12">

        <h2>@ViewBag.Title</h2>

        <hr />

        <div class="text-center">

            <h5>Bạn có chắc muốn xóa khóa học <strong>@Model.TenKhoaHoc?</strong></h5>

            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })

                <button type="submit" class="btn btn-primary">Chấp nhận</button>

                <a href="@Url.Action("Index")" class="btn btn-default">Không xóa</a>

            }

        </div>

    </div>

</div>